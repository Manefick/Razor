@model IEnumerable<Product>
@{
    ViewBag.Title = "Product Name";
}

@foreach (Product product in Model.OrderBy(x=>x.Price))
{
    <p>Name: @product.Name, Price: @($"{ product.Price:c2}")</p>
}

